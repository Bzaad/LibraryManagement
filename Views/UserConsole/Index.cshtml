@model UserConsoleViewModel

@section title {
    <div class="row">
        <div class="col-7"><h3>User's Console</h3></div>
        <div class="col-2"><label for="user">User Name:</label></div>
        <div class="col-3">User1</div>
    </div>
}

<br />
<div class="row">
    <div class="col-4">
        <select id="SelectedCategoryId" asp-for="SelectedCategoryId" class="form-control">
            <option>Please Select a Category</option>
            @if (Model.Categories != null && Model.Categories.Count() > 0)
            {
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </select>
        <br />
        <div id="booksPartial">
            @* Books List Partial *@
        </div>
        <br />
        <div id="bookDetailPartial">
            @* "Book" Details *@
        </div>
    </div>
    <div class="col">
        <!-- Additional content column -->
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#SelectedCategoryId").change(function () {
                $("#booksPartial").load("/books/BooksByCategoryPartial", { categoryId: $(this).val() });
            });

            $("#booksPartial").on('click', '.book-row', function () {
                $('.book-row').removeClass('highlight');
                $(this).addClass('highlight');

                var bookId = $(this).attr('id');

                $("#bookDetailPartial").load("/UserConsole/SelectBookPartial", { Id: bookId });
            });
        });

    </script>
}
